<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArtifactsMMO_Utility_Mobile.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">
            <Label x:Name="Logs" FontSize="Small" LineBreakMode="WordWrap" HorizontalOptions="FillAndExpand"/>

            <Picker x:Name="ListOfPlayer" SelectedIndexChanged="Change_Player" HorizontalOptions="FillAndExpand"/>

            <Button x:Name="FightLoop" Text="Loop fight" Background="Red" FontSize="Small" Clicked="FightLoop_Click"/>
            <Button x:Name="RecoltLoop" Text="Loop gathering" Background="Red" FontSize="Small" Clicked="RecolteLoop_Click"/>
            <Button Text="Key" Clicked="Key_click"/>
            <Button Text="+" FontSize="Large" Clicked="CharacterCreation_Click"/>
            <Button Text="-" FontSize="Large" Clicked="DeleteCharacter_Click"/>

            <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                <CheckBox x:Name="AutoCheck" HeightRequest="15" WidthRequest="15"/>
                <Label Text="Auto sale" VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <Image x:Name="SkinPicture" Aspect="AspectFit" HorizontalOptions="CenterAndExpand"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
